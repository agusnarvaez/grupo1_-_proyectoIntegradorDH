<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs', {partialHead: partialHead}) %>
<!-- Head -->

<body>
  <%- include('../partials/header.ejs') %>
  <!--Header -->

  <main>
    <%- include('../partials/filter.ejs') %>
    <!-- Filter -->

    <section class="products">
      <% products.forEach(product => { %>
      <article class="product" href="/products/detail/<%= product.id %>">
        <h1><%= product.productName %></h1>
        <div class="image">
          <img class="productimages" src="./images/productsImages/<%=product.img%>" alt="<%=product.img%>">
        </div>
        <p class="descriptionProduct"><%= product.description %></p>

      </article>
      <% }) %>
    </section>

  </main>

  <%- include('../partials/footer.ejs') %>
  <!--Footer  -->
</body>

</html>